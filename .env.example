# Environment Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://mission_control:changeme@localhost:5432/mission_control
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mission_control
POSTGRES_USER=mission_control
POSTGRES_PASSWORD=changeme

# Kubernetes (uses in-cluster config when running in K8s)
K8S_IN_CLUSTER=false
# KUBECONFIG=/path/to/kubeconfig  # Optional: for local dev

# Proxmox
PROXMOX_HOST=https://192.168.50.10:8006
PROXMOX_API_TOKEN=your-proxmox-token-here
PROXMOX_VERIFY_SSL=false

# Prometheus
PROMETHEUS_URL=http://prometheus-server.observability-stack:9090

# ArgoCD (optional for Phase 1)
ARGOCD_SERVER=argocd-server.argocd:443
# ARGOCD_AUTH_TOKEN=your-argocd-token

# Ollama
OLLAMA_BASE_URL=http://ollama.dev:11434
OLLAMA_MODEL=mistral

# Gemini
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp

# Backend Authentication
API_AUTH_TOKEN=your-secure-auth-token-here

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3001,http://localhost:5173
